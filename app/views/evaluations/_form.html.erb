<div id="modal-window" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <button class="close" data-dismiss="modal">x</button>
    <div class="modal-content">
      <%= form_tag evaluations_url %>
        <%=  Ingroup.where(group_id: Group.where(course_id: Project.find(params[:project_id]).course_id)).each do |mem| %>
        <%- if mem.user_id != current_user.id %>
          <%= form_with(model: @evaluation, local: true) do |form| %>
            <% if @evaluation.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@evaluation.errors.count, "error") %> prohibited this evaluation from being saved:</h2>
                <ul>
                  <% @evaluation.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <h3>Evaluation for <% "#{mem.user.Fname} #{mem.user.Lname}" %></h3>
            <div class="field">
              <%= form.hidden_field :project_id, :value => params[:project_id] %>
              <%= form.hidden_field :user_id, :value => mem.user_id %>
              <%= form.label :score %>
              <%= form.number_field :score %>
            </div>
            <div class="field">
              <%= form.label :comment %>
              <%= form.text_area :comment %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <div class="actions">
        <%= Incomplete.delete(current_user.id) %>
        <%= submit_tag "Submit" %>
      </div>
    </div>
  </div>
</div>


