<div id="modal-window-project" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-heading">New Project</h2>
        <button class="signup-btn" data-dismiss="modal" data-target="modal-window-project">x</button>
      </div>
      <%= form_with(model: @project, local: true) do |form| %>
        <% if @project.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this incourse from being saved:</h2>
            <ul>
              <% @project.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="modal-body">
          <div class="field">
            <%= form.label :pname, "Project Name"%>
            <%= form.text_field :pname %>
            <%= form.hidden_field :course_id, :value => Course.find_by(id: params[:course_id]).id %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
