<div id="modal-window-preport<%= "#{params[:project_id]}" %>" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h2 class="modal-heading">Project Reports</h2>
            <button class="signup-btn" data-dismiss="modal" data-target="modal-window-preport<%= "#{params[:project_id]}" %>">x</button>
          </div>
            <h3>
              Report for <%= "#{Project.find(@pid).pname}" %>
            </h3>
            <div class="modal-body">
                <div class="container">
                    <%- if !Evaluation.where(project_id: @pid).empty? %>
                      <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
                          <thead>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Score</th>
                            <th>Comment</th>
                          </thead>
                          <tbody>
                            <%- Evaluation.where(project_id: @pid).each do |eval| %>
                              <tr>
                                <td><%= eval.user.Fname %></td>
                                <td><%= eval.user.Lname %></td>
                                <td><%= eval.score %></td>
                                <td><%= eval.comment %></td>
                              </tr>
                            <% end %>
                          </tbody>
                      </table>
                    <% else %>
                      <h3><%= "No grades to report." %></h3>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>