<div id="modal-window-course" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-heading">New Course</h2>
        <button class="signup-btn" data-dismiss="modal" data-target="modal-window-course">x</button>
      </div>
      <%= form_with(model: @course, local: true) do |form| %>
        <% if @course.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@course.errors.count, "error") %> prohibited this incourse from being saved:</h2>
            <ul>
              <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="modal-body">
          <div class="field">
            <%= form.label :course_id, "Course Section" %>
            <%= form.number_field :course_id %>
          </div>
          <div class="field">
            <%= form.label :subject %>
            <%= form.text_field :subject %>
          </div>
          <div class="field">
            <%= form.label :number %>
            <%= form.number_field :number %>
          </div>
          <div class="field">
            <%= form.label :name %>
            <%= form.text_field :name %>
          </div>
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
