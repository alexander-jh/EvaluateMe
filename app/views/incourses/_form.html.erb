<div id="modal-window" class="modal fade">
  <div class="modal-dialog">
    <button class="close" data-dismiss="modal">x</button>
    <div class="modal-content">
      <%= form_with(model: @incourse, local: true) do |form| %>
        <% if @incourse.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@incourse.errors.count, "error") %> prohibited this incourse from being saved:</h2>
            <ul>
              <% @incourse.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="modal-body">
          <div class="field">
            <%= form.label :user_id %>
            <%= form.select :user_id, User.where.not(id: current_user.id).reject{ |user|
                Incourse.where(course_id: params[:course_id]).find_by(user_id: user.id)
              }.
                  collect {|user| ["#{user.Lname}, #{user.Fname}", user.id]}%>
            <%= form.hidden_field :course_id, :value => Course.find_by(id: params[:course_id]).id %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>