<div id="modal-window" class="modal fade">
  <div class="modal-dialog">
    <button class="close" data-dismiss="modal">x</button>
    <div class="modal-content">
      <%= form_with(model: @ingroup, local: true) do |form| %>
        <% if @ingroup.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@ingroup.errors.count, "error") %> prohibited this incourse from being saved:</h2>
            <ul>
              <% @ingroup.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="modal-body">
          <div class="field">
              <%= form.label :user_id %>
              <%= form.select :user_id, Incourse.where.not(user_id: current_user).
                where(course_id: params[:course_id]).reject{ |group|
                Ingroup.where(group_id: params[:group_id]).find_by(user_id: group.user_id)
                }.
                collect {|user| ["#{user.user.Lname}, #{user.user.Fname}", user.user.id]}%>
              <%= form.hidden_field :group_id, :value => params[:group_id] %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= form.submit "Add User to Group"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
