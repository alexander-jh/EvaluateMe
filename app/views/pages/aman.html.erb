<h1>Section Management</h1>
<h1>Projects</h1>
<div class="container">
  <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
    <thead>
    <th>Project Name</th>
    <th>Mean Score</th>
    <th>Action</th>
    </thead>
    <tbody>
    <% Project.where(course_id: @current_course).each do |p| %>
      <tr>
        <td><%= p.pname %></td>
        <td></td>
        <td><%= link_to "Select", show_project_path(:project_id => p.id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'} %>
          /<%= link_to "Delete", destroy_project_path(:project_id => p.id) %>/<%= link_to "Send Evaluation", send_eval_path(:project_id => p.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Project', new_project_path(:course_id => @current_course), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>
<h1>Groups</h1>
<div class="container">
  <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
    <thead>
    <th>Group Name</th>
    <th># of Members</th>
    <th>Modify</th>
    </thead>
    <tbody>
    <% Group.where(course_id: @current_course).each do |g| %>
      <tr>
        <td><%= g.group_name %></td>
        <td><%= Ingroup.where(group_id: g.id).count %></td>
        <td><%= link_to 'Select', gman_path(:group_id => g.id) %>/Delete</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'New Group', new_group_path(:course_id => params[:course_id]), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>
<h1>Users</h1>
<div class="container">
  <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
    <thead>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Mean Score</th>
      <th>Action</th>
    </thead>
    <tbody>
    <% Incourse.where(course_id: @current_course).each do |c| %>
      <tr>
        <td><%=c.user.Fname%></td>
        <td><%=c.user.Lname%></td>
        <td><%=c.user.email%></td>
        <td>N/A</td>
        <td>Select/Delete</td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= link_to 'Add User', new_incourse_path(:course_id => params[:course_id]), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}  %>

