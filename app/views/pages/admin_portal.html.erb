<h1>Sections</h1>
<div class="table_container">
  <%- if Course.where(user_id: current_user.id).count != 0 %>
    <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
      <thead>
        <th>Section ID</th>
        <th>Subject</th>
        <th>Number</th>
        <th>Course Name</th>
        <th>Enrolled</th>
        <th>Mean</th>
        <th></th>
      </thead>
      <tbody>
      <% Course.where(user_id: current_user.id).each do |course| %>
        <tr>
          <td><%= course.course_id %></td>
          <td><%= course.subject %></td>
          <td><%= course.number %></td>
          <td><%= course.name %></td>
          <td><%= Incourse.where(course_id: course.id).count %></td>
          <%- if Evaluation.where(course_id: course.id).count.zero? %>
            <td><%= "N/A" %></td>
          <% else %>
            <td><%= Evaluation.where(course_id: course.id).average(:score) %></td>
          <% end %>
          <td><%= link_to 'Select', aman_path(:course_id => course.id) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  <% else %>
    <h3><%= 'No current sections managed.' %></h3>
  <% end %>
</div>

