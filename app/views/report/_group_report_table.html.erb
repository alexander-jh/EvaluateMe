<div id="modal-window-greport<%="#{params[:user_id]}"%>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-heading">Group Reports</h2>
        <button class="signup-btn" data-dismiss="modal" data-target="modal-window-greport<%="#{params[:user_id]}"%>">x</button>
      </div>
      <h3>
        Grade Report for <%= "#{User.find(params[:user_id]).Fname} #{User.find(params[:user_id]).Lname}" %>
      </h3>
      <div class="modal-body">
        <div class="container">
          <%- if Evaluation.where(user_id: params[:user_id]).where(course_id: params[:course_id]).count != 0 %>
            <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
              <thead>
                <th>Project Name</th>
                <th>Score</th>
                <th>Comment</th>
              </thead>
              <tbody>
                <%- Evaluation.where(user_id: params[:user_id]).where(course_id: params[:course_id]).each do |eval| %>
                  <tr>
                    <td><%= eval.project.pname %></td>
                    <td><%= eval.score %></td>
                    <td><%= eval.comment %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <h3><%= "No grades recorded." %></h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


