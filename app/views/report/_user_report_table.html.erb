<div id="modal-window-ureport<%="#{params{:course_id}}"%>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-heading">Reports</h2>
        <button class="signup-btn" data-dismiss="modal" data-target="modal-window-eval">x</button>
      </div>
      <h3>
        Report for <%= "#{Course.find(params[:course_id]).subject}#{Course.find(params[:course_id]).number}" %>
      </h3>
      <div class="modal-body">
        <div class="container">
          <%- if Evaluation.where(user_id: current_user.id).where(course_id: Course.find(params[:course_id]).id).count != 0 %>
            <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
              <thead>
              <th>Project Name</th>
              <th>Score</th>
              <th>Comment</th>
              </thead>
              <tbody>
                <%- Evaluation.where(user_id: current_user.id).where(course_id: Course.find_by(id: params[:course_id]).id).each do |eval| %>
                  <tr>
                    <td><%= eval.project.pname %></td>
                    <td><%= eval.score %></td>
                    <td><%= eval.comment %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <h3><%= 'No evaluations submitted.' %> </h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


