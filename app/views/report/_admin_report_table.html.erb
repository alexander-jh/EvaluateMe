<div id="modal-window-areport<%= "#{params[:user_id]}" %>" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <button class="close" data-dismiss="modal" data-target="modal-window-areport<%= "#{params[:user_id]}" %>">x</button>
    <div class="modal-content">
      <h3>
        Report for <%= "#{User.find(params[:user_id]).Fname} #{User.find(params[:user_id]).Lname}" %>
      </h3>
      <div class="modal-body">
        <div class="container">
          <%- if Evaluation.where(user_id: params[:user_id]).where(course_id: Course.find_by(id: params[:course_id]).id).count != 0 %>
            <table id="data-table" class="table table-striped table-bordered" style="width: 800px;">
              <thead>
                <th>Project Name</th>
                <th>Score</th>
                <th>Comment</th>
              </thead>
              <tbody>
                <%- Evaluation.where(user_id: params[:user_id]).where(course_id: Course.find_by(id: params[:course_id]).id).each do |eval| %>
                  <tr>
                    <td><%= eval.project_id.project.name %></td>
                    <td><%= eval.score %></td>
                    <td><%= eval.comment %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <h3><%= "No scores to report." %></h3>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


