<div id="modal-window" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <button class="close" data-dismiss="modal">x</button>
    <div class="modal-content">
      <%= form_with(model: @group, local: true) do |form| %>
        <% if @group.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@group.errors.count, "error") %> prohibited this incourse from being saved:</h2>
            <ul>
              <% @group.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="modal-body">
          <div class="field">
            <%= form.label :group_name %>
            <%= form.text_field :group_name %>
            <%= form.hidden_field :course_id, :value => Course.find_by(id: params[:course_id]).id %>
          </div>
        </div>
        <div class="modal-footer">
          <div class="actions">
            <%= form.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
